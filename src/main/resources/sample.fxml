<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller">
    <children>
        <TabPane layoutX="2.0" layoutY="-1.0" prefHeight="400.0" prefWidth="500.0" stylesheets="@style.css"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Product Line">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    stylesheets="@style.css">
                            <children>
                                <GridPane prefHeight="142.0" prefWidth="298.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Product Name"/>
                                        <TextField fx:id="prName" GridPane.columnIndex="1"/>
                                        <TextField fx:id="prMan" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label text="Manufacturer" GridPane.rowIndex="1"/>
                                        <Label contentDisplay="BOTTOM" prefHeight="20.0" prefWidth="76.0"
                                               text="Item Type" GridPane.rowIndex="2"/>
                                        <ChoiceBox fx:id="itemType" prefHeight="54.0" prefWidth="120.0"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                                <Button layoutX="298.0" layoutY="115.0" mnemonicParsing="false" onAction="#addProduct"
                                        text="Add Product"/>
                                <Label layoutY="157.0" text="Existing Products"/>
                                <TableView layoutX="100.0" layoutY="149.0" prefHeight="200.0" prefWidth="221.0">
                                    <columns>
                                        <TableColumn fx:id="iType" prefWidth="75.0" text="type"/>
                                        <TableColumn fx:id="iMan" prefWidth="75.0" text="manufacturer"/>
                                        <TableColumn fx:id="iproduct" prefWidth="75.0" text="product"/>
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Produce">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label text="Choose product"/>
                                <ListView layoutY="17.0" prefHeight="200.0" prefWidth="200.0"/>
                                <Label layoutX="200.0" text="Choose Quantity"/>
                                <ComboBox fx:id="chQuantity" layoutX="200.0" layoutY="17.0" prefWidth="150.0"/>
                                <Button layoutX="200.0" layoutY="104.0" mnemonicParsing="false"
                                        onAction="#recordProduction" text="Record production"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Production Log">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    stylesheets="@style.css">
                            <children>
                                <TextArea prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
    <stylesheets>
        <URL value="@style.css"/>
        <URL value="@style.css"/>
    </stylesheets>
</Pane>
